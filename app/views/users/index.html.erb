<%= form_with do |f| %>
  <div class="form-group">
    <%= f.text_field :first_name, class: 'form-inline', placeholder: 'First Name' %>
    <%= f.text_field :last_name, class: 'form-inline', placeholder: 'Last Name' %>
    <%= f.text_field :url, class: 'form-inline', placeholder: 'Url' %>
    <%= f.submit 'SEARCH', class: 'btn btn-success' %>
  </div>
<% end %>
<div class="container mt-5">
  <div class="page-header">
    <h3><span class="label label-danger"> Valid emails </span></h3>
  </div>
</div>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="text-center">first name</th>
        <th class="text-center">last name</th>
        <th class="text-center">url</th>
        <th class="text-center">email</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="text-center"><%= user.first_name %></td>
          <td class="text-center"><%= user.last_name %></td>
          <td class="text-center"><%= user.url %></td>
          <td class="text-center"><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>